# Telegram Bot Configuration
# Отримайте токен від @BotFather в Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# OpenAI Configuration
# Отримайте API ключ на https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic (Claude) Configuration
# Отримайте API ключ на https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional: Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Optional: Bot settings
MAX_FILE_SIZE_MB=10
MAX_ATTEMPTS=20

# Optional: AI Model settings
OPENAI_MODEL=gpt-4-turbo-preview
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Optional: File organization
WORK_FOLDER=Work
INVALID_FOLDER=Not valid

# Optional: Rate limiting (requests per minute)
OPENAI_RPM=3
ANTHROPIC_RPM=5